generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String 
  name    String?
  roles   Role[] @default([CUSTOMER])
  ticketsAssigned String[]
  ticketsCreated String[]
}

enum Role {
  CUSTOMER
  ADMIN
  ENGINEER
}